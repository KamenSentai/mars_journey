// Loading

.loadingPage
  width 100vw
  height 100vh
  position absolute
  z-index 100
  background-color #0e0e0e
  top 0
  transition top 1s ease-in

  p
    margin-top 50px
    text-align center
    font-size 30px
    font-weight 100
    opacity 0.5

  img
    width 100px
    display block
    margin 20px auto
    text-align center
    opacity 0.5

#bodymovin
  width 600px
  padding-right 50px
  margin auto
  margin-top 200px
  margin-bottom 100px
